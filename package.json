{
  "name": "es-in-css",
  "version": "0.1.3",
  "description": "Need to write CSS, but tired of SASS, LESS et al? Try JavaScript/TypeScript in CSS.",
  "scripts": {
    "format": "eslint --fix  \"*.{js,ts,tsx}\" \"src/**/*.{js,ts,tsx}\"  &&  prettier --write \"*.{json,md}\"  \"src/**/*.{json,md}\"",
    "build": "yarn install  &&  tsc --noEmit  &&  node build.js  &&  yarn run test",
    "dev": "yarn install  &&  yarn run concurrently \"tsc --noEmit --watch --preserveWatchOutput\"  \"node build.js --dev\"  \"yarn run test:dev\"",
    "prepublishOnly": "echo \"\nRun 'yarn run publishdist' to publish this package\n\n\"  && exit 1",
    "publishdist": "yarn run build  &&  cd dist  &&  npm publish",
    "test:dev": "sleep 1 \n yarn run test  \n yarn run test:watch",
    "test:watch": "onchange '__tests/**/*.tests.js' -d 500 -f add -f change -- ospec {{changed}}",
    "test:compiler": "node dist/bin/compiler.js \"__tests/**/*.css.js\"",
    "test": "ospec \"__tests/**/*.tests.js\"",
    "es-in-css": "node ./dist/bin/compiler.js"
  },
  "repository": "git@github.com:maranomynet/es-in-css.git",
  "author": "Már Örlygsson",
  "license": "MIT",
  "private": true,
  "dist_package_json": {
    "engines": {
      "node": ">=12"
    },
    "main": "lib/index.cjs.js",
    "module": "lib/index.esm.js",
    "types": "lib/index.d.ts",
    "bin": {
      "es-in-css": "bin/compiler.ts"
    }
  },
  "engines": {
    "node": "^16"
  },
  "dependencies": {
    "@types/color": "^3.0.3",
    "@types/color-name": "^1.1.1",
    "autoprefixer": "^10.4.2",
    "color": "^4.2.1",
    "color-name": "^1.1.4",
    "commander": "^9.0.0",
    "glob": "^7.2.0",
    "postcss": "^8.4.6",
    "postcss-nested": "^5.0.6",
    "postcss-scss": "^4.0.3"
  },
  "devDependencies": {
    "@hugsmidjan/hxmstyle": "^6.0.0",
    "@types/glob": "^7.2.0",
    "@types/node": "^17.0.17",
    "@types/ospec": "^4.0.2",
    "@typescript-eslint/eslint-plugin": "^5.8.0",
    "@typescript-eslint/parser": "^5.8.0",
    "concurrently": "^7.0.0",
    "esbuild": "^0.14.18",
    "esbuild-plugin-d.ts": "^1.1.0",
    "eslint": "^8.7.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-deprecation": "^1.3.2",
    "eslint-plugin-destructure-depth": "^1.0.3",
    "eslint-plugin-destructuring": "^2.2.1",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-total-functions": "^5.0.1",
    "eslint-plugin-unused-imports": "^2.0.0",
    "onchange": "^7.1.0",
    "ospec": "^4.1.1",
    "prettier": "^2.5.1",
    "typescript": "^4.5.5"
  },
  "hxmstyle": {
    "options": {
      "typescript": true
    },
    "dependenciesAdded": [
      "@typescript-eslint/eslint-plugin",
      "@typescript-eslint/parser",
      "eslint",
      "eslint-config-prettier",
      "eslint-plugin-deprecation",
      "eslint-plugin-destructure-depth",
      "eslint-plugin-destructuring",
      "eslint-plugin-import",
      "eslint-plugin-prettier",
      "eslint-plugin-simple-import-sort",
      "eslint-plugin-total-functions",
      "eslint-plugin-unused-imports",
      "prettier"
    ]
  },
  "packageManager": "yarn@3.2.0"
}
